<% if flash[:notice].present? %>
  <div class='notice'>
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_tag '/login' do %>
  <%= label_tag 'email' %>
  <%= text_field_tag 'email', nil, :autofocus => true %>

  <%= label_tag 'password' %>
  <%= password_field_tag 'password' %>

  <%= submit_tag 'Login' %>
<% end %>