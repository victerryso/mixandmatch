<h2>Sign In</h2>

<% if flash[:notice].present? %>
  <div class='notice'>
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_tag '/login' do %>
  <p>
    <%= label_tag 'email' %>
    <%= text_field_tag 'email', nil, :autofocus => true %>
  </p>
  <p>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </p>

  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>